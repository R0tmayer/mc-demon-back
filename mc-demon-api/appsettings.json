{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	// /app/mc-demon - папка в которую маунтится папка /opt/mc-demon на хосте
	// таким образом внутри контейнера будет создана папка /app/mc-demon откуда будут читаться конфиги
	"SourceOptions": {
		"PROFILES_CSV_PATH": "/app/sources/csv/profiles.csv",
		"TEMPLATES_CSV_PATH": "/app/sources/csv/templates.csv",
		"TEMPLATES_FOLDER_PATH": "/app/sources/templates",
		"CONFIGS_FOLDER_PATH": "/app/sources/configs"
	}
}
